<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarycontrolfx.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Library Control">
        <font>
            <Font size="39.0" />
        </font>
    </Label>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Button onAction="#userButtonClick" prefHeight="25.0" prefWidth="660.0" text="Cadastro de usuários">
            <font>
               <Font size="15.0" />
            </font></Button>
            <Button mnemonicParsing="false" onAction="#publicationButtonClick" prefHeight="25.0" prefWidth="659.0" text="Cadastro de publicações" GridPane.rowIndex="2">
            <font>
               <Font size="15.0" />
            </font></Button>
            <Button mnemonicParsing="false" onAction="#loanButtonClick" prefHeight="25.0" prefWidth="665.0" text="Movimentação" GridPane.rowIndex="4">
            <font>
               <Font size="15.0" />
            </font></Button>
            <Button mnemonicParsing="false" onAction="#ReportsButtonClick" prefHeight="25.0" prefWidth="660.0" text="Relatórios" GridPane.rowIndex="6">
            <font>
               <Font size="15.0" />
            </font>
         </Button>
        </children>
    </GridPane>

    <Label fx:id="welcomeText" />
</VBox>
